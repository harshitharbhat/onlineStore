<style type="text/css">

    .cartButton {
        position: relative;
        display: inline-block;
        padding: 6px 5px;
        width: 100%;
        color: #fff;
        font-size: 16px;
        line-height: 20px;
        text-align: center;
        letter-spacing: 1px;
        background: cornflowerblue;
        border: 0;
        border-bottom: 2px solid #3160B6;
        cursor: pointer;
        transition: all 0.15s ease;
        margin: 10px;
    }
</style>

<h3> Shopping cart</h3>

<table>
  <% @cart.lineitems.each do |item| %>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.product.price %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan="2"> Total Price </td>
    <td><%= @cart.total_price %></td>
  </tr>
</table>


<%= button_to "Empty Cart", @cart, method: :delete, data: {confirm: 'are you sure you want to empty the cart?'},class: 'cartButton' %>
<%= button_to "Checkout", new_order_path, method: :get ,class: 'cartButton'%>